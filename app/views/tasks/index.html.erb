<h1>Tasks/tâches :</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "🗑️",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?"}
      %>
    </li>
  <% end %>
</ul>
<p>
  <%= link_to "Ajouter une tâche", new_task_path %>
</p>
